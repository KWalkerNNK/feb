<title>Edit My Info</title>
<style>
  .text-control:focus {
    outline: none;
  }
</style>
<section>
  <div class='container py-5'>
    {{#with user}}
    <div class='row'>
      <div class='col-lg-4'>
        <div class='card mb-4'>
          <div class='card-body text-center'>
            <img src='/img/user.png' alt='avatar'
              class='rounded-circle img-fluid' style='width: 150px; height: 150px' />
            <h5 class='my-3'>{{this.fullName}}</h5>
            <p class='text-muted mb-1'>Developer</p>
            <p class='text-muted mb-4'>{{this.address}}</p>
          </div>
        </div>
        <div class='card mb-4 mb-lg-0'>
          <div class='card-body p-0'>
            <ul class='list-group list-group-flush rounded-3'>
              <li class='list-group-item d-flex justify-content-between align-items-center p-3'>
                <i class='fas fa-globe fa-lg text-warning'></i>
                <p class='mb-0'>https://example.com</p>
              </li>
              <li class='list-group-item d-flex justify-content-between align-items-center p-3'>
                <i class='fab fa-github fa-lg' style='color: #333333;'></i>
                <p class='mb-0'>example</p>
              </li>
              <li class='list-group-item d-flex justify-content-between align-items-center p-3'>
                <i class='fab fa-twitter fa-lg' style='color: #55acee;'></i>
                <p class='mb-0'>@example</p>
              </li>
              <li class='list-group-item d-flex justify-content-between align-items-center p-3'>
                <i class='fab fa-instagram fa-lg' style='color: #ac2bac;'></i>
                <p class='mb-0'>example</p>
              </li>
              <li class='list-group-item d-flex justify-content-between align-items-center p-3'>
                <i class='fab fa-facebook-f fa-lg' style='color: #3b5998;'></i>
                <p class='mb-0'>example</p>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class='col-lg-8'>
        <div class='card mb-4'>
          <form method="post">
            <div class='card-body'>
              <div class='row'>
                <div class='col-sm-3'>
                  <p class='mb-0'>Full Name</p>
                </div>
                <div class='col-sm-9'>
                  <input id="fullname-input" name="fullName" type="text" class='text-muted mb-0 text-control border-0'
                    value="{{this.fullName}}"></input>
                </div>
              </div>
              <hr />
              <div class='row'>
                <div class='col-sm-3'>
                  <p class='mb-0'>Email</p>
                </div>
                <div class='col-sm-9'>
                  <input id="email-input" name="email" type="email" class='text-muted mb-0 text-control border-0'
                    value="{{this.email}}"></input>
                </div>
              </div>
              <hr />
              <div class='row'>
                <div class='col-sm-3'>
                  <p class='mb-0'>Phone</p>
                </div>
                <div class='col-sm-9'>
                  <input id="phone-number-input" name="phoneNumber" type="tel"
                    class='text-muted mb-0 text-control border-0' value="{{this.phoneNumber}}"></input>
                </div>
              </div>
              <hr />
              <div class='row'>
                <div class='col-sm-3'>
                  <p class='mb-0'>Address</p>
                </div>
                <div class='col-sm-9'>
                  <input id="address-input" name="address" type="text" class='text-muted mb-0 text-control border-0'
                    value="{{this.address}}"></input>
                </div>
              </div>
              <hr />
              <div class='row'>
                <div class='col-sm-3'>
                  <p class='mb-0'>Password</p>
                </div>
                <div class='col-sm-9'>
                  <input id="password-input" name="password" type="password"
                    class='text-muted mb-0 text-control border-0' value=""></input>
                </div>
              </div>
            </div>
            <div class='d-flex justify-content-end p-2'>
              <button id="save-btn" type='submit' class='btn btn-outline-danger ms-1'>Save</button>
            </div>
          </form>

        </div>
        <div class='row'>
          <div class='col-md-6'>
            <div class='card mb-4 mb-md-0'>
              <div class='card-body'>
                <p class='mb-4'><span class='text-danger font-italic me-1'>Feb</span>
                  Project Status
                </p>
                <p class='mb-1' style='font-size: .77rem;'>Web Design</p>
                <div class='progress rounded' style='height: 5px;'>
                  <div class='progress-bar' role='progressbar' style='width: 49%' aria-valuenow='80' aria-valuemin='0'
                    aria-valuemax='100'></div>
                </div>
                <p class='mt-4 mb-1' style='font-size: .77rem;'>Website Markup</p>
                <div class='progress rounded' style='height: 5px;'>
                  <div class='progress-bar' role='progressbar' style='width: 72%' aria-valuenow='72' aria-valuemin='0'
                    aria-valuemax='100'></div>
                </div>
                <p class='mt-4 mb-1' style='font-size: .77rem;'>One Page</p>
                <div class='progress rounded' style='height: 5px;'>
                  <div class='progress-bar' role='progressbar' style='width: 89%' aria-valuenow='89' aria-valuemin='0'
                    aria-valuemax='100'></div>
                </div>
                <p class='mt-4 mb-1' style='font-size: .77rem;'>Mobile Template</p>
                <div class='progress rounded' style='height: 5px;'>
                  <div class='progress-bar' role='progressbar' style='width: 55%' aria-valuenow='55' aria-valuemin='0'
                    aria-valuemax='100'></div>
                </div>
                <p class='mt-4 mb-1' style='font-size: .77rem;'>Backend API</p>
                <div class='progress rounded mb-2' style='height: 5px;'>
                  <div class='progress-bar' role='progressbar' style='width: 99%' aria-valuenow='66' aria-valuemin='0'
                    aria-valuemax='100'></div>
                </div>
              </div>
            </div>
          </div>
          <div class='col-md-6'>
            <div class='card mb-4 mb-md-0'>
              <div class='card-body'>
                <p class='mb-4'><span class='text-danger font-italic me-1'>Dong Hanh</span>
                  Project Status
                </p>
                <p class='mb-1' style='font-size: .77rem;'>Web Design</p>
                <div class='progress rounded' style='height: 5px;'>
                  <div class='progress-bar' role='progressbar' style='width: 0%' aria-valuenow='80' aria-valuemin='0'
                    aria-valuemax='100'></div>
                </div>
                <p class='mt-4 mb-1' style='font-size: .77rem;'>Website Markup</p>
                <div class='progress rounded' style='height: 5px;'>
                  <div class='progress-bar' role='progressbar' style='width: 72%' aria-valuenow='72' aria-valuemin='0'
                    aria-valuemax='100'></div>
                </div>
                <p class='mt-4 mb-1' style='font-size: .77rem;'>One Page</p>
                <div class='progress rounded' style='height: 5px;'>
                  <div class='progress-bar' role='progressbar' style='width: 89%' aria-valuenow='89' aria-valuemin='0'
                    aria-valuemax='100'></div>
                </div>
                <p class='mt-4 mb-1' style='font-size: .77rem;'>Mobile Template</p>
                <div class='progress rounded' style='height: 5px;'>
                  <div class='progress-bar' role='progressbar' style='width: 55%' aria-valuenow='55' aria-valuemin='0'
                    aria-valuemax='100'></div>
                </div>
                <p class='mt-4 mb-1' style='font-size: .77rem;'>Backend API</p>
                <div class='progress rounded mb-2' style='height: 5px;'>
                  <div class='progress-bar' role='progressbar' style='width: 99%' aria-valuenow='66' aria-valuemin='0'
                    aria-valuemax='100'></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    {{/with}}
  </div>
</section>