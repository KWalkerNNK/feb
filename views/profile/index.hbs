<link rel='stylesheet' href='/css/profile.css' />
<script src='/js/profile.js'></script>
<section class='vh-100'>
  <div class='container py-5 h-100'>
    <div class='row d-flex justify-content-center align-items-center h-100'>
      <div class='col col-lg-6 mb-4 mb-lg-0'>
        <div class='card mb-3' style='border-radius: .5rem;'>
          {{#with user}}
          <title>{{this.fullName}}'s Profile</title>
            <div class='row g-0'>
              <div
                class='col-md-4 gradient-custom text-center text-white'
                style='border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;'
              >
                <img
                  src='/img/user.png'
                  alt='Avatar'
                  class='img-fluid my-5'
                  style='width: 80px; height: 80px; border-radius: 50%;'
                />
                <h5>{{this.fullName}}</h5>
                <p>Developer</p>
                {{#compare id DeletedAt}}
                  <a
                    id='edit-profile'
                    class='text-white'
                    href='/profile/edit/{{id}}?email={{email}}'
                  ><i class='far fa-edit mb-5'></i></a>
                {{else}}
                {{/compare}}

              </div>
              <div class='col-md-8'>
                <div class='card-body p-4'>
                  <h6>Information</h6>
                  <hr class='mt-0 mb-4' />
                  <div class='row pt-1'>
                    <div class='col-6 mb-3'>
                      <h6>Email</h6>
                      <p class='text-muted'>{{this.email}}</p>
                    </div>
                    <div class='col-6 mb-3'>
                      <h6>Phone</h6>
                      <p class='text-muted'>{{this.phoneNumber}}</p>
                    </div>
                  </div>
                  <div class='row pt-1'>
                    <div class='col-6 mb-3'>
                      <h6>Address</h6>
                      <p class='text-muted'>{{this.address}}</p>
                    </div>
                  </div>
                  <h6>Projects</h6>
                  <hr class='mt-0 mb-4' />
                  <div class='row pt-1'>
                    <div class='col-6 mb-3'>
                      <h6>Recent</h6>
                      <p class='text-muted'>Feb</p>
                    </div>
                    <div class='col-6 mb-3'>
                      <h6>Most Viewed</h6>
                      <p class='text-muted'>Dong Hanh</p>
                    </div>
                  </div>
                  <div class='d-flex justify-content-start'>
                    <a href='#!'><i
                        class='fab fa-facebook-f fa-lg me-3'
                      ></i></a>
                    <a href='#!'><i class='fab fa-twitter fa-lg me-3'></i></a>
                    <a href='#!'><i class='fab fa-instagram fa-lg'></i></a>
                  </div>
                </div>
              </div>
            </div>
          {{/with}}
        </div>
      </div>
    </div>
  </div>
</section>